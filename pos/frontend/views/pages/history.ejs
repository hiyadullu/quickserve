            box-shadow: 0 0 0 2px #778DA9;
            width: 280px;
        }

        /* Filter and Date Controls */
        .filter-controls {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            align-items: center;
        }

        .date-filter {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .date-filter label {
            color: #fff;
            font-size: 14px;
        }

        .date-filter input {
            padding: 8px 12px;
            border-radius: 5px;
            border: none;
            background-color: #0D1B2A;
            color: #fff;
        }

        .filter-btn {
            padding: 8px 15px;
            border-radius: 5px;
            border: none;
            background-color: #778DA9;
            color: #fff;
            font-weight: 500;
            cursor: pointer;
        }

        .filter-btn:hover {
            background-color: #415A77;
        }

        .view-toggle {
            display: flex;
            gap: 10px;
        }

        .view-btn {
